{
  "extends": "@nuxt/typescript",
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "types": [
      "@types/node",
      "@nuxt/vue-app"
    ],
    "typeRoots": [
      "types"
    ],
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
